@tailwind base;
@tailwind components;
@tailwind utilities;

@import url('./node_modules/mapbox-gl/dist/mapbox-gl.css');
@import url('./node_modules/react-toastify/dist/ReactToastify.css');

html,
body {
  @apply h-screen m-0 p-0 overflow-y-hidden !important;
}

#root {
  @apply h-full;
}

.transition-group {
  position: relative;
}
.route-div {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}
